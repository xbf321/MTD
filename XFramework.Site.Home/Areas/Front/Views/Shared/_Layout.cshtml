<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - 机科发展科技股份有限公司</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=7" />
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
    <meta name="author" content="兴百放,xbf321(at)gmail.com" />
    <link rel="alternate" hreflang="cn" href="http://www.mtd.com.cn" />
    <meta name="Keywords" content="@(ViewBag.Keywords != null ? ViewBag.Keywords : "")" />
    <meta name="Description" content="@(ViewBag.Description != null ? ViewBag.Description : "")" />
    <link href="@Url.Content("~/styles/site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/scripts/kissy/1.2.0/kissy-min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var _GLOBAL = { rootId: 0, language: '@(PageData["Language"])' };
        function bookmark(title, url) {
            if (document.all)
                window.external.AddFavorite(url, title);
            else if (window.sidebar)
                window.sidebar.addPanel(title, url, "");
        }
    </script>
    @RenderSection("header", false)
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-27769639-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
    <!--logo banner begin-->
    <div class="topbg_bar">
        <div id="top_bar">
            <div class="top_nav">@Html.Raw(XFramework.Common.LanguageResourceHelper.GetString("site-top-nav-text", PageData["Language"]))</div>
            @Html.Raw(XFramework.Common.LanguageResourceHelper.GetString("site-top-logo-link-text", PageData["Language"]))</div>
    </div>
    <!--logo banner end-->
    <!--menuSearch begin-->
    <div class="menuSearch_bg">
        <ul id="menu_bar">
            @Html.Action("RenderHeaderMenu", "Home", new { Language = PageData["Language"] })
        </ul>
        <span class="clear"></span>
    </div>
    @RenderBody()
    <span class="box_10"></span>
    <div class="links_liuy">
        @Html.Raw(XFramework.Common.LanguageResourceHelper.GetString("footer-friendlink-text", PageData["Language"]))
    </div>
    <span class="box_10"></span>
    <!--footer begin-->
    <div id="footer_bar">
        <div class="footer_logoinfo">
            @Html.Raw(XFramework.Common.LanguageResourceHelper.GetString("footer-text", PageData["Language"]))
        </div>
    </div>
    <!--footer end-->
    <script type="text/javascript">
        KISSY.ready(function (S) {
            var DOM = S.DOM, $ = S.all, menuListObj = DOM.children(DOM.get('#menu_bar'));
            S.each(menuListObj, function (item) {
                var obj = $(item),id = parseInt(obj.attr('id'));
                if (id === _GLOBAL.rootId) {
                    obj.attr('class', 'on');
                } else {
                    obj.attr('class', '');
                }
                
            });
            if (_GLOBAL.rootId === -1) {
                var obj = $(menuListObj);
                obj && obj.item(0) && obj.item(0).attr('class', 'on');
            }
            S.each(['ddlLink1', 'ddlLink2', 'ddlLink3'], function (item) {
                var obj =  $('#'+item); 
                if(obj){
                    $(obj).on('change', function () {
                        if (this.value !== "0") {
                            window.open(this.value);
                        }
                    });
                }
            });
            @RenderSection("scriptready",false)
        });
    </script>
    @RenderSection("footer", false)
</body>
</html>
